                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>


                    </DataGrid>

                    <TextBlock x:Name="txtCountCredit" Foreground="White" Margin="10 40 0 0" FontSize="20" Text="Найдено записей: " Height="30" Width="250" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <hc:Pagination x:Name="pagGridCredit" Cursor="Hand" Margin="100 0 0 40" VerticalAlignment="Bottom" HorizontalAlignment="Left" MaxPageCount="10" PageUpdated="pagGridCredit_PageUpdated" PageIndex="1"/>

                    <TextBox Width="250"
                            Height="40"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0 30 50 0"
                            Grid.Column="1"
                            Style="{StaticResource ModernTextBox}"/>


                    <Button x:Name="AddButtonCredit"                          
                            Content="Добавить"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource AddButtonPages}"
                            Margin="0 30 150 30"
                            Click="AddButtonCredit_Click">



                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="35"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>


                    </Button>

                </Grid>
            </TabItem>
